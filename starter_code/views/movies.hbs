<div class="header">
  <h2>Ironhack Cinema</h2>
  <p>Click on the movie to check the showtimes!</p>
</div>

<div class="movies-container">

  {{#each moviesList}}
  <div class="movie-card">
    <img src="{{image}}" alt="Movie cover">
    <br />
    <p>{{title}}</p>
    <br />
    <a href="/movies/{{_id}}">See more</a>
  </div>
  {{/each}}
</div>